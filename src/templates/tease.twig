<article id="tease-{{post.ID}}" class="tease tease-{{post.post_type}} {% if post.class matches '/sticky/' %}featured{% endif %}">
    {% block content %}
        <h2 class="h2">
            <a href="{{post.link}}">{{post.title}}</a>
        </h2>
        <p>{{post.preview}}</p>
        {% if post.get_thumbnail %}
            <img src="{{post.thumbnail.src}}"/>
        {% endif %}
    {% endblock %}
</article>